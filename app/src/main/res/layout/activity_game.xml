<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/petra"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/petra"
        android:layout_above="@id/vs"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/psalidi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/psalidi"
        android:layout_above="@id/vs"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/xarti"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/xarti"
        android:layout_above="@id/vs"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:onClick="exiter"
        android:text="@string/exit"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/vs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/vs"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/petra2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/vs"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/petra"
        android:onClick="petra" />

    <Button
        android:id="@+id/psalidi2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/vs"
        android:background="@drawable/psalidi"
        android:onClick="psalidi"
        android:layout_alignRight="@+id/vs" />

    <Button
        android:id="@+id/xarti2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/vs"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/xarti"
        android:onClick="xarti" />

    <TextView
        android:id="@+id/you"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/you_0"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/acsofticecream"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/ai"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/ai_0"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/acsofticecream"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>



</RelativeLayout>